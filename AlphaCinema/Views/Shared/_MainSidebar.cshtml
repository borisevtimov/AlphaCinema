@using AlphaCinema.Core.Constants

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="/" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light"><b>Alpha</b>Cinema</span>
    </a>
    <div class="sidebar">
        <partial name="_LoginPartial" />
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item menu-open">
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/" class="nav-link text-center">
                                <p>Home</p>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a href="/" class="nav-link text-center">
                                    <p>My Tickets</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Voucher" asp-action="Mine" class="nav-link text-center">My Vouchers</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Card" asp-action="All" class="nav-link text-center">Payment Methods</a>
                            </li>
                        }
                    </ul>
                </li>
            </ul>
        </nav>
    </div>
</aside>