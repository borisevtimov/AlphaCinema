@using AlphaCinema.Core.Constants
@using AlphaCinema.Core.ViewModels
@model IList<DisplayVoucherVM>

@{
    ViewData[ViewConstant.Title] = "Available Vouchers";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Vouchers</h3>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Code</th>
                    <th>Discount</th>
                    <th>ExpireDate</th>
                    <th style="width: 40px"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <form asp-controller="Voucher" asp-action="Get" method="post">
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Code</td>
                        <td>@(Model[i].Discount * 100)%</td>
                        <td>@Convert.ToString(string.Format("{0:dd.MM.yyyy} г.", Model[i].ExpireDate))</td>
                        <td>
                            <button type="submit" asp-route-id="@Model[i].Code" class="btn btn-outline-success btn-xs" style="min-width: 120px">
                                Get
                            </button>
                        </td>
                    </tr>
                    </form>
                }
            </tbody>
        </table>
    </div>
</div>