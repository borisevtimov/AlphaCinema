@using AlphaCinema.Core.Constants
@using AlphaCinema.Core.ViewModels
@model AddPaymentMethodVM

@{
    ViewData[ViewConstant.Title] = "Add Payment Method";
}

<div class="card card-primary align-content-center">
    <form asp-controller="Card" asp-action="Add" method="post">
        <div class="card-header">
            <h3 class="card-title">Add Payment Method</h3>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger input-group-text"></div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label asp-for="Number">Card Number</label>
                        <input asp-for="Number" class="form-control">
                    </div>
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label asp-for="CVC">CVC</label>
                        <input asp-for="CVC" class="form-control">
                    </div>
                    <span asp-validation-for="CVC" class="text-danger"></span>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="ExpireDate">Expire Date</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="far fa-clock"></i></span>
                            </div>
                            <input asp-for="ExpireDate" type="text" class="form-control" placeholder="mm/yy">
                        </div>
                        <span asp-validation-for="ExpireDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label asp-for="Balance">Balance</label>
                        <input asp-for="Balance" class="form-control">
                    </div>
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary float-right">Submit</button>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}