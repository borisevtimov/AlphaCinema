@using AlphaCinema.Core.Constants
@using AlphaCinema.Core.ViewModels
@model IList<UserTicketsVM>

@{
    ViewData[ViewConstant.Title] = "My Tickets";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Purchased Tickets</h3>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th style="width: 300px">Movie Name</th>
                    <th style="width: 140px">Hall</th>
                    <th style="width: 140px">Row</th>
                    <th style="width: 140px">Column</th>
                    <th style="width: 340px">Start</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < @Model.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model[i].MovieName</td>
                        <td>@Model[i].HallNumber</td>
                        <td>@Model[i].Row</td>
                        <td>@Model[i].Column</td>
                        <td>@Model[i].Start</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>