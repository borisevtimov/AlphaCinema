@using AlphaCinema.Core.Constants

@{
    ViewData[ViewConstant.Title] = "Tickets";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Movie - MovieName</h3>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th style="width: 120px">Hall</th>
                    <th style="width: 120px">Row</th>
                    <th style="width: 120px">Column</th>
                    <th style="width: 270px">Start</th>
                    <th>Voucher</th>
                    <th>Price</th>
                    <th style="width: 40px">Purchased</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 3; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>2</td>
                        <td>5</td>
                        <td>6</td>
                        <td>21.12.2020 20:15:30</td>
                        <td>CA92BX</td>
                        <td>9.93 lv.</td>
                        <td>True</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
        <a asp-area="Administrator" asp-controller="Ticket" asp-action="Add" asp-route-id="@Model.MovieId" class="btn btn-primary float-right" style="max-width: 130px">Add Ticket</a>
    </div>
</div>