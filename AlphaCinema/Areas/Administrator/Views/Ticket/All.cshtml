@using AlphaCinema.Core.Constants
@using AlphaCinema.Core.ViewModels
@model AdminTicketsVM

@{
    ViewData[ViewConstant.Title] = "Tickets";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Movie - @Model.MovieName</h3>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th style="width: 120px">Hall</th>
                    <th style="width: 120px">Row</th>
                    <th style="width: 120px">Column</th>
                    <th style="width: 270px">Start</th>
                    <th>Voucher</th>
                    <th>Price</th>
                    <th style="width: 40px">Purchased</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Tickets.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model.Tickets[i].HallNumber</td>
                        <td>@Model.Tickets[i].Row</td>
                        <td>@Model.Tickets[i].Column</td>
                        <td>@Model.Tickets[i].Start</td>
                        <td>@Model.Tickets[i].VoucherCode</td>
                        <td>@Model.Tickets[i].Price lv.</td>
                        <td>@Model.Tickets[i].IsPurchased</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
        <a asp-area="Administrator" asp-controller="Ticket" asp-action="Add" asp-route-id="@Model.MovieId" class="btn btn-primary float-right" style="max-width: 130px">Add Ticket</a>
    </div>
</div>