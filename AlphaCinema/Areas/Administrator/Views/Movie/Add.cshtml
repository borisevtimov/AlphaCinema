@using AlphaCinema.Constants
@using AlphaCinema.Core.ViewModels
@model AddMovieVM

@{
    ViewData[ViewConstant.Title] = "Add Movie";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add Movie</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        @*<label for="name">Name</label>
                            <input type="text" id="inputName" class="form-control">*@
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="ReleaseDate">Release Date</label>
                            <div class="input-group">
                                <input asp-for="ReleaseDate" type="date" class="form-control" placeholder="dd/mm/yyyy">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="Duration">Duration (Minutes)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="far fa-clock"></i></span>
                            </div>
                            <input asp-for="Duration" type="text" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
<textarea id="inputDescription" class="form-control" asp-for="Description" rows="4"></textarea>
            </div>
            <div class="form-group">
                <div class="form-check float-right">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                    <label asp-for="IsActive" class="form-check-label">Is Active</label>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <form asp-controller="Movie" asp-action="Add" method="post">
            <button type="submit" class="btn btn-primary float-right" style="max-width: 130px">Submit</button>
        </form>
    </div>
</div>
