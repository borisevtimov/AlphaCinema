@using AlphaCinema.Constants
@using AlphaCinema.Core.ViewModels
@model List<AdminUserVM>

@{
    ViewData[ViewConstant.Title] = "Users";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Registered users</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>RegisteredOn</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.RegisteredOn</td>
                                <td>
                                    @for (int i = 0; i < user.Roles.Count; i++)
                                    {
                                        if (i == user.Roles.Count - 1)
                                        {
                                            <span class="tag tag-success">@user.Roles[i]</span>
                                            continue;
                                        }

                                        <span class="tag tag-success">@user.Roles[i], </span>
                                    }
                                </td>
                                <td>
                                    <a asp-area="Administrator" asp-action="ChangeRole" asp-controller="User" asp-route-id="@user.Id" class="btn btn-block btn-outline-primary btn-xs">Change roles</a>
                                    <a asp-area="Administrator" asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" class="btn btn-block btn-outline-danger btn-xs">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

